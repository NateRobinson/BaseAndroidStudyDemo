<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:background="@android:color/white"
    android:orientation="vertical">

    <Button
        android:id="@+id/activityLifeCycleBtn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Activity生命周期测试"
        android:textSize="16sp" />

    <Button
        android:id="@+id/fragmentBtn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Fragment使用简介"
        android:textSize="16sp" />

    <Button
        android:id="@+id/rvBtn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="RecyleView使用"
        android:textSize="16sp" />

    <Button
        android:id="@+id/sharedperferenceBtn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="SharedPerference使用"
        android:textSize="16sp" />

    <Button
        android:id="@+id/fileSaveBtn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="文件存储的使用"
        android:textSize="16sp" />

    <Button
        android:id="@+id/intentuseBtn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Intent的使用"
        android:textSize="16sp" />


</LinearLayout>
